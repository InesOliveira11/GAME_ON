<p id="notice"><%= notice %></p>
<div class="row justify-content-center">
  <h1 class="text-center mb-5"><h1>Pick your next adventure...</h1>
  <br>
</div>
<div class="row justify-content-center">
<div class="container">
    <div class="row mt-4">
      <% @games.each do |game| %>
      <%= link_to game_path(game) do %>
          <div class="col-3 p-3">
            <div class="card-trip">
              <div class="background-card-image" style="background-image: url('<%= cl_image_path game.photo.key%>')"></div>
              <% end %>
                <div class="card-trip-infos">
                    <h2><%= game.name %></h2>
                    <p><%= game.description %></p>
                    <p><%= game.console %></p>
                    <p>⭐ <%= game.rating %></p>
                  <h2 class="card-trip-pricing">￡<%= game.price %></h2>
                </div>
            </div>
          </div>
    <% end %>
        </div>
      </div>
</div>
