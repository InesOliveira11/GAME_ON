                      <% end %>

                      <p>
                      <% counter = 0 %>
                      <% 5.times do %>
                        <% unless game.rating == nil %>
                          <% if counter < game.rating  %>
                            ⭐
                            <% counter += 1 %>
                          <% end %>
                        <% end %>
                      <% end %>
                      </p>
                    </div>
                    <div class="card-trip-pricing mt-3">
                    <h2>￡<%= game.price %></h2>
                    </div>
                </div>
            </div>
          </div>
    <% end %>
        </div>
      </div>
</div>
